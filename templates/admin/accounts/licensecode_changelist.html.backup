{% extends "admin/change_list.html" %}
{% load static %}

{% block content %}
{{ block.super }}

<!-- Add License Code Form Section -->
<div style="margin-top: 2rem; background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 0.5rem; padding: 1.5rem;">
    <h2 style="color: var(--primary); margin-bottom: 1rem; font-size: 18px; font-weight: 600;">
        ➕ Add New License Code
    </h2>
    
    <form method="post" action="{% url 'admin:accounts_licensecode_add' %}">
        {% csrf_token %}
        
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
            <!-- Code Field -->
            <div>
                <label for="id_code" style="display: block; color: var(--text-secondary); font-weight: 500; font-size: 13px; margin-bottom: 0.5rem;">
                    Code:
                </label>
                <input 
                    type="text" 
                    name="code" 
                    id="id_code" 
                    required
                    style="width: 100%; background: var(--bg-dark); border: 1px solid var(--border-color); color: var(--text-primary); border-radius: 0.375rem; padding: 0.5rem 0.75rem; font-size: 14px;"
                    placeholder="Enter license code"
                />
            </div>
            
            <!-- Duration Field -->
            <div>
                <label for="id_duration_days" style="display: block; color: var(--text-secondary); font-weight: 500; font-size: 13px; margin-bottom: 0.5rem;">
                    Duration (days):
                </label>
                <input 
                    type="number" 
                    name="duration_days" 
                    id="id_duration_days"
                    style="width: 100%; background: var(--bg-dark); border: 1px solid var(--border-color); color: var(--text-primary); border-radius: 0.375rem; padding: 0.5rem 0.75rem; font-size: 14px;"
                    placeholder="Leave empty for lifetime"
                />
                <small style="display: block; color: var(--text-muted); font-size: 12px; margin-top: 0.25rem;">
                    Leave empty for lifetime license
                </small>
            </div>
        </div>
        
        <!-- Notes Field -->
        <div style="margin-bottom: 1rem;">
            <label for="id_notes" style="display: block; color: var(--text-secondary); font-weight: 500; font-size: 13px; margin-bottom: 0.5rem;">
                Notes (optional):
            </label>
            <textarea 
                name="notes" 
                id="id_notes"
                rows="3"
                style="width: 100%; background: var(--bg-dark); border: 1px solid var(--border-color); color: var(--text-primary); border-radius: 0.375rem; padding: 0.5rem 0.75rem; font-size: 14px; resize: vertical;"
                placeholder="Add any notes about this license code..."
            ></textarea>
        </div>
        
        <!-- Is Active Checkbox -->
        <div style="margin-bottom: 1rem;">
            <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                <input 
                    type="checkbox" 
                    name="is_active" 
                    id="id_is_active"
                    checked
                    style="cursor: pointer; width: 16px; height: 16px;"
                />
                <span style="color: var(--text-primary); font-size: 14px;">
                    Active (code can be used immediately)
                </span>
            </label>
        </div>
        
        <!-- Submit Button -->
        <div style="display: flex; gap: 0.5rem;">
            <button 
                type="submit"
                style="background: var(--primary); color: #001b0f; border: 1px solid var(--primary); border-radius: 0.375rem; padding: 0.5rem 1.5rem; font-weight: 600; font-size: 14px; cursor: pointer; transition: all 0.2s;"
                onmouseover="this.style.background='var(--primary-dark)'; this.style.transform='translateY(-1px)';"
                onmouseout="this.style.background='var(--primary)'; this.style.transform='translateY(0)';"
            >
                ➕ Add License Code
            </button>
            
            <button 
                type="button"
                onclick="document.getElementById('id_code').value=''; document.getElementById('id_duration_days').value=''; document.getElementById('id_notes').value='';"
                style="background: var(--bg-panel); color: var(--text-primary); border: 1px solid var(--border-color); border-radius: 0.375rem; padding: 0.5rem 1.5rem; font-weight: 500; font-size: 14px; cursor: pointer; transition: all 0.2s;"
                onmouseover="this.style.background='var(--bg-card)';"
                onmouseout="this.style.background='var(--bg-panel)';"
            >
                Clear
            </button>
        </div>
    </form>
</div>

<style>
/* Form input focus states */
#id_code:focus,
#id_duration_days:focus,
#id_notes:focus {
    border-color: var(--primary) !important;
    box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
    outline: none !important;
}
</style>
{% endblock %}
